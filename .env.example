# Global application environment
ASPNETCORE_ENVIRONMENT=Development

# SQL Server configuration (used by docker-compose and the ASP.NET Core API)
MSSQL_SA_PASSWORD=ChangeMe123!
SQLSERVER_HOST=mssql
SQLSERVER_PORT=1433
SQLSERVER_USER=sa
SQLSERVER_DATABASE=QuizDB
HANGFIRE_DATABASE=QuizHangfire

# Connection strings exposed to ASP.NET Core via double-underscore notation
ConnectionStrings__Default=Server=${SQLSERVER_HOST},${SQLSERVER_PORT};Database=${SQLSERVER_DATABASE};User Id=${SQLSERVER_USER};Password=${MSSQL_SA_PASSWORD};TrustServerCertificate=True;
ConnectionStrings__SqlServer=Server=${SQLSERVER_HOST},${SQLSERVER_PORT};Database=${SQLSERVER_DATABASE};User Id=${SQLSERVER_USER};Password=${MSSQL_SA_PASSWORD};TrustServerCertificate=True;
ConnectionStrings__Hangfire=Server=${SQLSERVER_HOST},${SQLSERVER_PORT};Database=${HANGFIRE_DATABASE};User Id=${SQLSERVER_USER};Password=${MSSQL_SA_PASSWORD};TrustServerCertificate=True;

# JWT authentication settings
Jwt__Key=ChangeMeToARealKey
Jwt__Issuer=OxygenQuiz
Jwt__Audience=OxygenQuizClients

# Seed data configuration consumed by DataSeeder
SeedData__SuperAdmin__Username=admin
SeedData__SuperAdmin__Email=admin@example.com
SeedData__SuperAdmin__Password=ChangeMe!
SeedData__DefaultUserPassword=ChangeMe!

# MongoDB settings for optional chat services
MongoDb__ConnectionString=mongodb://mongodb:27017
MongoDb__DatabaseName=oxygenquiz

# FastAPI LLM microservice defaults
LLM_MODEL=gemma3:12b
MICROSERVICE_PORT=8000

# Local port bindings for docker-compose
BACKEND_PORT=5000
FRONTEND_PORT=3000
MSSQL_PORT=1433
MONGODB_PORT=27017
